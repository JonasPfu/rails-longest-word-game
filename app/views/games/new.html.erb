
<div class="container">
  <h1>New game</h1>
  <div>
    <% @letters.each do |letter| %>
      <button type="button" class="btn btn-primary"><%= letter %></button>
    <% end %>
  </div>

  <div>
    <p>What is the longest word that you can find?</p>
    <form action="/score" method="post" class="form-inline">
      <input class="form-group mx-sm-3 mb-2" type="text" name="word" placeholder="Post your word">
      <button type="submit" class="btn btn-primary mb-2">Play</button>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
    </form>
  </div>
</div>
